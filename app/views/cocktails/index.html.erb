  <div class="cocktail-wrapper">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: "cocktail-index-card-link" do %>

        <% if cocktail.photo.attached? %>
          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.photo.key) %>);">
        <% else %>
          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= asset_path 'cocktail.jpg' %>);">
        <% end %>

          <div class="cocktail-info">
            <div class="cocktail-name">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

<div class="link-wrapper">
  <% if policy(@cocktails).create? %>
    <%= link_to 'âž• Add a new Cocktail', new_cocktail_path, class:"btn btn-small btn-secondary" %>
  <% end %>
  <p>Share your favorite cocktails <i class="fab fa-twitter-square"></i></p>
</div>
