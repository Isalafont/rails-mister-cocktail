
<div class="cocktail-cover-wrapper">
  <div class="cocktail-cover">
    <div class="cocktail-cover-title">
      <h2><%= @cocktail.name %></h2>
    </div>
  </div>
</div>

<div class="cocktail-info-container">
  <div class="cocktail-photo-left">
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 200, width: 300, crop: :fill %>
    <% else %>
      <%= image_tag "https://source.unsplash.com/400x500/?cocktail", alt: "Un super cocktail" %>
    <% end %>
  </div>

  <div class="cocktail-info">
    <div class="cocktail-chapter-title">
      <h2>Ingredients</h2>
      <div class="cocktail-line-title"></div>
    </div>
    <div class="cocktail-ingredients">
      <% @cocktail.doses.each do |dose| %>
        <div class="quantity"><%= dose.description %></div>
        <div class="name"><%= dose.ingredient.name %></div>
        <div class="delete"><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i></div>
        <% end %>
      <% end %>
    </div>
    <div class="link-add-ingredient">
      <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, new_cocktail_dose_path(@cocktail), id:"favicon-add-link" %>
    </div>
  </div>
</div>

