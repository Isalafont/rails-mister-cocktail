<div class="container m-3 p-3">
  <h2><%= @cocktail.name %></h2>

  <ul>
    <li>Ingredients</li>
    <li><%= link_to 'Doses', new_cocktail_dose_path(@cocktail) %></li>
  </ul>

  <!-- <div class="container justify-content-center m-3 p-3"> -->

  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item justify-content-center"><i class="fas fa-star"></i></li>
      <li class="list-group-item"><%= dose.ingredient.name %></li>
      <li class="list-group-item"><%= dose.description %></li>
      <li class="list-group-item"><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i><% end %></li>
      <% end %>
  </ul>
  <hr>
  <p><%= link_to 'Go back to Cocktails', cocktails_path, class:"btn btn-small btn-success" %></p>
</div>
